{
    "dependencies": {
        "cheerio": "^1.0.0-rc.3",
        "d3": "^5.9.2",
        "dotenv": "^7.0.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.4"
    },
    "devDependencies": {
        "esbuild": "^0.20.2",
        "concurrently": "^8.2.2"
    },
    "scripts": {
        "build": "esbuild src/index.js --bundle --loader:.png=file --loader:.svg=file --loader:.jpg=file --loader:.ttf=file --outdir=dist && cp src/index.html dist/index.html",
        "start": "concurrently \"esbuild src/index.js --bundle --loader:.png=file --loader:.svg=file --loader:.jpg=file --loader:.ttf=file --outdir=dist --watch\" \"esbuild src/index.html --outdir=dist --watch\" \"esbuild --serve --servedir=dist\"",
        "scrape": "node functions/scraper/scraper-cli.js 2024"
    },
    "name": "nba-radial-bracket",
    "version": "2.0.0",
    "description": "Visualize the NBA playoffs",
    "main": "index.js",
    "author": "Mathew Varughese <mat.varughese3@gmail.com>",
    "license": "MIT"
}